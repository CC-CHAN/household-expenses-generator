<div class="d-flex flex-mb2">
  <div class="d-flex me-auto">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active disabled" aria-current="page" href="/"
          >抽獎</a
        >
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/hist">記錄</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/rule">玩法說明</a>
      </li>
    </ul>
  </div>
  <div class="p2"><%- color_btn %></div>
</div>

<div>
  <div class="d-grid gap-2">
    <% if (state === 'drawable') { %>
    <button
      class="btn btn-primary btn-lg"
      type="button"
      data-bs-toggle="modal"
      data-bs-target="#confirmDraw"
    >
      🍀🍀點擊抽獎🍀🍀
    </button>
    <% } else if (state ==='pending') { %>
    <button class="btn btn-primary btn-lg" type="button" disabled>
      🚀🚀恭喜🚀🚀<br />
      本月幸運分：<%= score %> <br />
      獲得金額為：<%= total %> <br />
      將會於3天內FPS存入
    </button>
    <% } else { %>
    <button class="btn btn-secondary btn-lg" type="button" disabled>
      本月幸運分：<%= score %> <br />
      獲得金額為：<%= total %> <br />
      下次抽獎日期為：<%= nextDraw %>
    </button>
    <% }%>
  </div>
</div>

<!-- Confirm -->
<div
  class="modal fade"
  id="confirmDraw"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          🎰確定要開始本月抽獎嗎‌？？
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          我再想想
        </button>
        <a href="/draw">
          <button type="button" class="btn btn-primary">準備好了</button>
        </a>
      </div>
    </div>
  </div>
</div>
